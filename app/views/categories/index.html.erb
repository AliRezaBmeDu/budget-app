<%= stylesheet_link_tag 'category_index' %>
<% content_for :page_name, "Category" %>

<%= render 'helper/navbar' %>
<div class="container-fluid">
  <% @categories.each do |category| %>
    <div class="card mt-3 px-3">
      <div class="card-body d-flex">
        <div class="d-flex align-items-center" style="width: 80%;">
          <img src="<%= category.icon %>" alt="category-icon" class="me-3 mr-3" style="max-width: 50px;" />
          <h2><%= link_to category.name, category_path(category.id), class: "text-decoration-none second-color" %></h2>
        </div>
        <h3 class="second-color align-self-center" style="width: 20%;">$ <%= category.total %></h3>
      </div>
    </div>
  <% end %>


  <div class="d-flex justify-content-center align-self-center mt-4">
    <%= link_to 'Add New Category', new_category_path, class: 'btn btn-primary', style: "width: 100%;" %>
  </div>

</div>
