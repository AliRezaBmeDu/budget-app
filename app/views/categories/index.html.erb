<%= stylesheet_link_tag 'category_index' %>
<% content_for :page_name, "Category" %>

<%= render 'helper/navbar' %>
<div class="container-fluid">
  <% @categories.each do |category| %>
    <div class="card mt-3 px-3">
      <div class="card-body d-flex">
        <div class="d-flex align-items-center" style="width: 80%;">
          <img src="<%= category.icon %>" alt="category-icon" class="me-3 mr-3" style="max-width: 50px;" />
          <h2><%= link_to category.name, category_path(category.id), class: "text-decoration-none second-color mx-3" %></h2>
        </div>
        <h3 class= "align-self-center" style="width: 20%;">$ <%= category.total %></h3>
      </div>
    </div>
  <% end %>

</div>

<div class="button-container d-flex align-items-center justify-content-center">
  <%= link_to 'Add New Category', new_category_path, class: "btn-background p-3 text-center", style: "width:80%;" %>
</div>
