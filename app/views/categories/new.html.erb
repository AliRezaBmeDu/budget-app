<% content_for :head do %>
  <%= stylesheet_link_tag 'user_index' %>
<% end %>

<% content_for :page_name, "New Category" %>

<%= render 'helper/navbar' %>

<div class="container-fluid">
  <%= form_for @category, url: categories_path, method: :post do |f| %>
    <div class="mt-3 mb-3">
      <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
    </div>
    <div class="mb-3">
      <%= f.text_field :icon, class: "form-control", placeholder: "icon" %>
    </div>
    <button type="submit" class="btn btn-primary" style="width: 100%;">Create Category</button>
  <% end %>
</div>
