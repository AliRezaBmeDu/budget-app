<%= stylesheet_link_tag 'category_index' %>
<% content_for :page_name, "Transactions" %>

<%= render 'helper/navform' %>
<div class="px-4 d-flex justify-content-between align-items-center top-card">
  <h2 class="second-color"><%= @category.name %></h2>
  <h2 class="second-color">$ <%= @category.total %></h2>
</div>
<div class="container-fluid">
  <% @category.buys.order(created_at: :desc).each do |buy| %>
    <div class="card mt-3 px-3">
      <div class="card-body d-flex justify-content-between">
        <div class="d-flex align-items-center">
          <h2 class="text-decoration-none second-color"><%= buy.name %></h2>
        </div>
        <h3 class="second-color align-self-center" >$ <%= buy.amount %></h3>
      </div>
    </div>
  <% end %>
</div>

<div class="button-container d-flex align-items-center justify-content-center">
  <%= link_to 'Add New Transaction', new_buy_path, class: "btn-background p-3 text-center", style: "width:80%;" %>
</div>
